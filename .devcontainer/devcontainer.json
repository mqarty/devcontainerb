{
  "name": "⚡ ⚡ devcontainerb ⚡ ⚡",
  "build": {
    "dockerfile": "./Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "mounts": [
    "source=${localEnv:HOME}/.zsh_history,target=/root/.zsh_history,type=bind",
    "source=${localEnv:HOME}/.ssh,target=/root/.ssh,type=bind",
    "source=aws-sso-cache,target=/root/.aws/sso,type=volume",
    "source=${localWorkspaceFolder}/devcontainerb,target=/workspaces/b6n/devcontainerb,type=bind",
    "source=${localWorkspaceFolder}/.devcontainer,target=/workspaces/b6n/.devcontainer,type=bind",
    "source=${localWorkspaceFolder}/notebooks,target=/workspaces/b6n/notebooks,type=bind",
    "source=${localWorkspaceFolder}/llibrariam,target=/workspaces/b6n/llibrariam,type=bind",
    "source=${localWorkspaceFolder}/RAGUdemy,target=/workspaces/b6n/RAGUdemy,type=bind"
  ],
  "runArgs": [
    "--name",
    "devcontainerb",
    "--gpus",
    "all"
  ],
  "customizations": {
    "vscode": {
      "extensions": [],
      "settings": {
        "chat.mcp.enabled": true,
        "editor.tabSize": 4,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "zsh"
          }
        }
      },
      "mcp": {
        // postman
      }
    }
  },
  "containerEnv": {
    "HISTFILE": "/root/.zsh_history",
    "HISTSIZE": "100000",
    "SAVEHIST": "100000"
  },
  "postStartCommand": "bash /workspaces/b6n/.devcontainer/scripts/mark-git-safe.sh || true"
}