{
  "name": "devcontainerb",
  "build": {
    "dockerfile": "./Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    // "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/stuartleeks/dev-container-features/shell-history": {},
    "ghcr.io/mikaello/devcontainer-features/modern-shell-utils:2": {}
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh/id_ed25519,target=/home/vscode/.ssh/id_ed25519,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [],
      "settings": {
        // "git.branchProtection": ["main"],
        "editor.tabSize": 4,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          },
          "fish": {
            "path": "fish"
          },
          "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
          },
          "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
          }
        }
      }
    }
  }
}